<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http:// schemas,android.com/tools"
    xmlns:tools2="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    style="@style/Mback"
    app:cardCornerRadius="33dp">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        style="@style/Sback"
        android:elevation="10dp">


        <TextView
            android:id="@+id/favItemName"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:text="الجزيرة الخضراء"
            android:textAlignment="viewEnd"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/favItemDes"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/favItemName"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="165dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="0dp"
            android:text="أكبر مجمع تجاري في الكويت"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/favItemPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/favItemDes"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/favBTN"
            android:background="@drawable/gradient_2"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="خيران"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/favItemImage"
            android:layout_width="144dp"
            android:layout_height="119dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-1dp"
            android:layout_marginBottom="0dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/avenuse" />

        <ImageView
            android:id="@+id/favBTN"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/favItemDes"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/ic_heart" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>